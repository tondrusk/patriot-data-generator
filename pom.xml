   <properties>
      <org.junit.platform.version>1.3.0</org.junit.platform.version>
      <org.junit.jupiter.version>5.4.0</org.junit.jupiter.version>
      <maven-surefire-plugin.version>3.0.0-M1</maven-surefire-plugin.version>
